<div class="container">

	<div class="row justify-content-center">
		
		<div class="col-sm-10">
			<%= render 'shared/errors/' %>
		</div>
		
		<div class="col-sm-10">
			<%= form_with(model: @article, class: "shadow p-3 mb-5 bg-info rounded ", local: true) do |f| %>

				<div class="form-group row">
					<%= f.label :title, class: "col-sm-2 col-form-label text-light" %>
					<div class="col-sm-10">
						<%= f.text_field :title, class: "form-control shadow rounded", Placeholder: "Title of Article" %>
					</div>
				</div>

				<div class="form-group row">
					<%= f.label :description, class: "col-sm-2 col-form-label text-light" %>
					<div class="col-sm-10">
						<%= f.text_area :description, rows:10, class: "form-control shadow rounded", Placeholder: "Description of Articles" %>
					</div>
				</div>

				<div class="form-group row justify-content-center">
					<%= f.submit class: "btn btn-outline-light"%>
				</div>

			<% end %>
		</div>
		
		<%= link_to '[ Cancel and return to Articles listing ]', articles_path, class: "text-info" %>

	</div>

</div>