<h2 class="text-center mt-4">Create a new Category</h2>
<div class="container">

	<div class="row justify-content-center">
		
		<div class="col-sm-10">
			<%= render 'shared/errors/', obj: @category %>
		</div>
		
		<div class="col-sm-10">
			<%= form_with(model: @category, class: "shadow p-3 mb-5 bg-info rounded ", local: true) do |f| %>

				<div class="form-group row">
					<%= f.label :name, "Category name", class: "col-sm-2 col-form-label text-light" %>
					<div class="col-sm-10">
						<%= f.text_field :name, class: "form-control shadow rounded", Placeholder: "Enter a Category" %>
					</div>
				</div>

				
				<div class="form-group row justify-content-center">
					<%= f.submit class: "btn btn-outline-light" %>
				</div>

			<% end %>
		</div>
		
		<%= link_to '[ Cancel and return to Articles listing ]', articles_path, class: "text-info" %>

	</div>

</div>