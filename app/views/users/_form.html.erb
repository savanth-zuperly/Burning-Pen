<div class="container">

	<div class="row justify-content-center">
		
		<div class="col-sm-10">
			<%= render 'shared/errors/', obj: @user %>
		</div>
		
		<div class="col-sm-10">
			<%= form_with(model: @user, class: "shadow p-3 mb-5 bg-info rounded ", local: true) do |f| %>

				<div class="form-group row">
					<%= f.label :username, class: "col-sm-2 col-form-label text-light" %>
					<div class="col-sm-10">
						<%= f.text_field :username, class: "form-control shadow rounded", Placeholder: "Enter a Username" %>
					</div>
				</div>

				<div class="form-group row">
					<%= f.label :email, class: "col-sm-2 col-form-label text-light" %>
					<div class="col-sm-10">
						<%= f.email_field :email,  class: "form-control shadow rounded", Placeholder: "Enter an email" %>
					</div>
				</div>

				<div class="form-group row">
					<%= f.label :password, class: "col-sm-2 col-form-label text-light" %>
					<div class="col-sm-10">
						<%= f.password_field :password,  class: "form-control shadow rounded", Placeholder: "Choose a Password" %>
					</div>
				</div>

				<div class="form-group row justify-content-center">
					<%= f.submit(@user.new_record? ? "Sign up" : "Update user", class: "btn btn-outline-light") %>
				</div>

			<% end %>
		</div>
		
		<%= link_to '[ Cancel and return to Articles listing ]', articles_path, class: "text-info" %>

	</div>

</div>