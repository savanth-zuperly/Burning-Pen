<h2 class="text-center mt-4">Bloggers</h2>
<div class="apple_pagination">
	 <%= will_paginate @users, :container => false %>
 </div>
<div class="container">
	<% @users.each do |user| %>
		<div class="row justify-content-md-center">
			<div class="col-8 mt-4">
			  <div class="card text-center shadow mb-5 bg-white rounded">
				  <div class="card-header font-italic">
 				    <%= link_to user.username, user_path(user) %>
				  </div>
				  <div class="card-body">
				    <h5 class="card-title"><%= link_to gravator_for(user, size: 150), user_path(user) %></h5>
				    <p class="card-text"><%= pluralize(user.articles.count,"article") %> </p>
				    <%= link_to 'View Profile' ,user_path(user), class: 'btn btn-outline-primary' %>
				    <%= link_to 'Edit Profile' ,edit_user_path(user), class: 'btn btn-outline-secondary' %>
				  </div>
				  <div class="card-footer text-muted">
				    <small>Joined <%=time_ago_in_words(user.created_at)%> ago</small>
				  </div>
				</div>
			  </div>
			</div>
		  
	<% end %>
</div>

<div class="apple_pagination mb-4">
	 <%= will_paginate @users, :container => false %>
 </div>